<%= form_with(model: @category) do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red">
      
      <h2><%= t("errors.template.header", model: Category.model_name.human, count: @category.errors.count) %>:</h2>

      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t('shared_book.category_name') %>:
    <%= form.text_field :name %>
  </div>
    <div>
    <%= form.submit @category&.persisted? ? t('shared_book.update') : t('shared_book.submit'), class: "btn btn-success" %>
  </div>
<% end %>

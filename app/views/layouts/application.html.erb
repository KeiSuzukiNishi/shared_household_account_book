<!DOCTYPE html>
<html>
<head>
<title><%= t('shared_book.title') %></title>
<meta name="viewport" content="width=device-width,initial-scale=1">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>
<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
<%= javascript_importmap_tags %>
<%= javascript_include_tag 'chartkick', 'Chart.bundle' %>
<script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if signed_in? %>
  <% if current_user&.admin? %>
    <%= link_to t('shared_book.incomes_expenses_index'), incomes_expenses_path %>
    <%= link_to t('shared_book.category_index'), categories_path %>
    <%= link_to t('shared_book.calendar_page'), calendar_incomes_expenses_path %>
    <%= link_to t('shared_book.charts'), pie_chart_monthly_path %>
    <%= link_to t('shared_book.expense_record_index'), expense_records_path %>
    <%= link_to t('shared_book.user_show'), user_path(current_user.id) %>
    <%= link_to t('shared_book.sign_out'), destroy_user_session_path, method: :get %>
    <%= link_to t("admin.admin_page"), rails_admin_path %></li>
  <% else %>
    <%= link_to t('shared_book.incomes_expenses_index'), incomes_expenses_path %>
    <%= link_to t('shared_book.category_index'), categories_path %>
    <%= link_to t('shared_book.calendar_page'), calendar_incomes_expenses_path %>
    <%= link_to t('shared_book.charts'), pie_chart_monthly_path %>
    <%= link_to t('shared_book.expense_record_index'), expense_records_path %>
    <%= link_to t('shared_book.user_show'), user_path(current_user.id) %>
    <%= link_to t('shared_book.sign_out'), destroy_user_session_path, method: :get %>
  <% end %>
<% end %>
<%= yield %>
</body>
</html>
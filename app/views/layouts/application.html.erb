<!DOCTYPE html>
<html>
  <head>
    <title><%= t('shared_book.title') %></title>
    <meta charset="utf-8">
    <meta name="description" content="SharedBookは複数人で共有できる家計簿です。収支一覧、カレンダー、グラフ表示も可能で、さらに割勘詳細を表示することにより各ユーザーの実際の負担金額等も確認できます。">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag 'jquery.min' %>
    <%= javascript_include_tag 'chartkick', 'Chart.bundle' %>
    <%= javascript_include_tag 'sb-admin-2.min' %>
    <%= javascript_include_tag 'bootstrap.bundle.min' %>

    <%= favicon_link_tag('favicon.ico') %>
    
    <!-- Custom fonts for this template-->
      <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
      <link
          href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap core JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- SB Admin 2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/startbootstrap-sb-admin-2@4.1.4/css/sb-admin-2.min.css" rel="stylesheet">
    
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.min.css" rel="stylesheet">

    <!-- DataTables JavaScript -->
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>


  </head>

  <body>
    <% if signed_in? %>
      <% if current_user&.admin? %>
        <%= link_to t('shared_book.user_show'), user_path(current_user.id) %>
        <%= link_to t('shared_book.sign_out'), destroy_user_session_path, method: :get %>
        <%= link_to t("admin.admin_page"), rails_admin_path %></li>
      <% else %>
        <%= link_to t('shared_book.user_show'), user_path(current_user.id) %>
        <%= link_to t('shared_book.sign_out'), destroy_user_session_path, method: :get %>
      <% end %>
    <% else %>
    <%= link_to t('shared_book.sign_in'), new_user_session_path %>
    <% end %>


    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <%= link_to root_path, class: "sidebar-brand d-flex align-items-center justify-content-center" do %>
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-share-alt"></i>
                </div>
                <div class="sidebar-brand-text mx-3"><%= t('shared_book.title').downcase %></div>
            <% end %>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <% if signed_in? %>
                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    <%= t('shared_book.menu') %>
                </div>

                <!-- Nav Item - 各種一覧 -->
                <li class="nav-item">
                    <%= link_to incomes_expenses_path, class: "nav-link" do %>
                        <i class="fas fa-fw fa-table"></i>
                        <span><%= t('shared_book.incomes_expenses_index') %></span>
                    <% end %>
                </li>

                <!-- Nav Item - 項目一覧 -->
                <li class="nav-item">
                    <%= link_to categories_path, class: "nav-link" do %>
                        <i class="fas fa-fw fa-folder"></i>
                        <span><%= t('shared_book.category_index') %></span>
                    <% end %>
                </li>

                <!-- Nav Item - 割勘一覧 -->
                <li class="nav-item">
                    <%= link_to expense_records_path, class: "nav-link" do %>
                        <i class="fas fa-calculator"></i>
                        <span><%= t('shared_book.expense_record_index') %></span>
                    <% end %>
                </li>

                <!-- Nav Item - カレンダー -->
                <li class="nav-item">
                    <%= link_to calendar_incomes_expenses_path, class: "nav-link" do %>
                        <i class="fas fa-calendar"></i>
                        <span><%= t('shared_book.calendar') %></span>
                    <% end %>
                </li>

                <!-- Nav Item - グラフ -->
                <li class="nav-item">
                    <%= link_to pie_chart_monthly_path, class: "nav-link" do %>
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span><%= t('shared_book.charts') %></span>
                    <% end %>
                </li>
            <% end %>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <div>
                        <p class="notice"><%= notice %></p>
                        <p class="alert"><%= alert %></p>
                    </div>
                    <!-- Sidebar Toggle (Topbar) -->
                    <form class="form-inline">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                    </form>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - Alerts -->
                        <% if signed_in? %>
                            <li class="nav-item dropdown no-arrow mx-1">
                                <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-bell fa-fw"></i>
                                    <!-- Counter - Alerts -->
                                    <span class="badge badge-danger badge-counter">3+</span>
                                </a>
                                <!-- Dropdown - Alerts -->
                                <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                    aria-labelledby="alertsDropdown">
                                    <h6 class="dropdown-header">
                                        Alerts Center
                                    </h6>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="mr-3">
                                            <div class="icon-circle bg-primary">
                                                <i class="fas fa-file-alt text-white"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="small text-gray-500">December 12, 2019</div>
                                            <span class="font-weight-bold">A new monthly report is ready to download!</span>
                                        </div>
                                    </a>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="mr-3">
                                            <div class="icon-circle bg-success">
                                                <i class="fas fa-donate text-white"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="small text-gray-500">December 7, 2019</div>
                                            $290.29 has been deposited into your account!
                                        </div>
                                    </a>
                                    <a class="dropdown-item d-flex align-items-center" href="#">
                                        <div class="mr-3">
                                            <div class="icon-circle bg-warning">
                                                <i class="fas fa-exclamation-triangle text-white"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="small text-gray-500">December 2, 2019</div>
                                            Spending Alert: We've noticed unusually high spending for your account.
                                        </div>
                                    </a>
                                    <a class="dropdown-item text-center small text-gray-500" href="#">Show All Alerts</a>
                                </div>
                            </li>

                            <!-- Nav Item - User Information -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-lg-inline text-gray-600 small"><%= current_user.name %></span>
                                </a>

                                <!-- Dropdown - User Information -->
                                <% if current_user&.admin? %>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                        aria-labelledby="userDropdown">
                                        <a class="dropdown-item" href="<%= user_path(current_user.id) %>">
                                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                            <%= t('shared_book.user_show') %>
                                        </a>
                                        <a class="dropdown-item" href="<%= edit_user_registration_path %>">
                                            <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                            <%= t('shared_book.user_setting') %>
                                        </a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="<%= destroy_user_session_path %>" data-method="delete">
                                            <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                            <%= t('shared_book.sign_out') %>
                                        </a>
                                        <a class="dropdown-item" href="<%= rails_admin_path %>" data-method="delete">
                                            <i class="fa-solid fa-lock fa-sm fa-fw mr-2 text-gray-400"></i>
                                            <%= t("admin.admin_page") %>
                                        </a>
                                    </div>
                                <% else %>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                            aria-labelledby="userDropdown">
                                            <a class="dropdown-item" href="<%= user_path(current_user.id) %>">
                                                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                                <%= t('shared_book.user_show') %>
                                            </a>
                                            <a class="dropdown-item" href="<%= edit_user_registration_path %>">
                                                <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                                <%= t('shared_book.user_setting') %>
                                            </a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="<%= destroy_user_session_path %>" data-method="delete">
                                                <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                                <%= t('shared_book.sign_out') %>
                                            </a>
                                        </div>
                                <% end %>
                            </li>
                            
                        <% end %>
                    </ul>
                </nav>
                <!-- End of Topbar -->

                <%= yield %>

            </div>
            <!-- End of Main Content -->
            
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Shared Book 2024</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>


  </body>
</html>